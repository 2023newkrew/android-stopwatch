<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StopWatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="time_text_main" parent="TextAppearance.AppCompat">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#FEFEFE</item>
    </style>
    <style name="time_text_secondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">#FEFEFE</item>
    </style>
</resources>