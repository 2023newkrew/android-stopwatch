<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_black"
    >

    <ImageView
        android:id="@+id/border_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/border_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238"
        app:srcCompat="@drawable/my_border_circle">

    </ImageView>

    <TextView
        android:id="@+id/second_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="00"
        android:textColor="@color/dark_white"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="@+id/border_circle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/border_circle"
        app:layout_constraintTop_toTopOf="@+id/border_circle" />

    <TextView
        android:id="@+id/mil_second_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="124dp"
        android:text="00"
        android:textColor="@color/dark_white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/border_circle"
        app:layout_constraintTop_toTopOf="@+id/second_text_view" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_pause_button_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/light_purple"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        android:contentDescription="@string/play_pause_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/init_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/wine"
        app:tint="@color/dark_white"
        app:borderWidth="0dp"

        app:layout_constraintBottom_toBottomOf="@+id/play_pause_button_view"
        app:layout_constraintEnd_toStartOf="@+id/play_pause_button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_pause_button_view"
        app:srcCompat="@drawable/ic_baseline_restart_alt_24"
        android:contentDescription="@string/init_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/record_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:borderWidth="0dp"
        app:tint="@color/dark_white"
        android:backgroundTint="@color/wine"
        app:layout_constraintBottom_toBottomOf="@+id/play_pause_button_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_pause_button_view"
        app:layout_constraintTop_toTopOf="@+id/play_pause_button_view"
        app:srcCompat="@drawable/ic_outline_timer_24"
        android:contentDescription="@string/record_button" />


</androidx.constraintlayout.widget.ConstraintLayout>